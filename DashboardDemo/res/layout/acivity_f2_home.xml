<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/home_btn_feature1"
			style="@style/HomeButton"
            android:text="수면상태" />

        <Button
            android:id="@+id/home_btn_feature2"
            style="@style/HomeButton"
            android:text="화장실이용패턴" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/home_btn_feature3"
            style="@style/HomeButton"
            android:text="병실온도" />

        <Button
            android:id="@+id/home_btn_feature4"
            style="@style/HomeButton"
            android:text="환자위치" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/home_btn_feature5"
            style="@style/HomeButton"
            android:text="낙상통계" />

        <Button
            android:id="@+id/home_btn_feature6"
            style="@style/HomeButton"
            android:text="이잘종계" />
    </LinearLayout>
</LinearLayout>
